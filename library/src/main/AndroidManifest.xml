<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="ru.bartwell.exfilepicker">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:debuggable="false"
        tools:ignore="HardcodedDebugMode">
        <activity
            android:name=".ui.activity.ExFilePickerActivity"
            android:theme="@style/ExFilePickerThemeLight"/>
        <activity android:name=".ui.activity.FilePickerActivity"
                  android:theme="@style/FilePickerThemeLight"/>
    </application>

</manifest>